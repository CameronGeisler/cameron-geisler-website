---
import Layout from '../layouts/Layout.astro';
import testimonials from '../content/testimonials.json';
---
<Layout title="Math Tutoring & Study Skills" description="Cameron Geisler — UBC Honours Math Graduate offering 1-on-1 online math tutoring for high school and university students.">

  <!-- HERO -->
  <section class="hero">
    <div class="container">
      <h1>UBC Honours Math Graduate<br>teaches math online</h1>
      <p>1-on-1 tutoring for high school and university students. 10+ years of experience.</p>
      <div class="hero-btns">
        <a href="/math-tutoring" class="btn btn-primary">Book a Free Consultation</a>
      </div>
    </div>
  </section>

  <!-- INTRO VIDEO -->
  <section class="section" style="padding: 1.5rem 0;">
    <div class="container">
      <div class="video-wrapper">
        <video controls preload="metadata">
          <source src="/videos/tutoring_intro_video_2025_oct.mp4" type="video/mp4">
        </video>
      </div>
    </div>
  </section>

  <!-- TESTIMONIALS -->
  <section class="section section-alt">
    <div class="container">
      <h2 class="section-title">From My Students</h2>
      <div class="testimonials-grid">
        {testimonials.slice(0, 6).map((t) => (
          <div class="testimonial">
            <blockquote>{t.review}</blockquote>
            {t.name && <cite>— {t.name}</cite>}
          </div>
        ))}
      </div>
    </div>
  </section>


</Layout>
